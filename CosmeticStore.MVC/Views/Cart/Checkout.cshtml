@model List<CosmeticStore.MVC.Models.CartItem>

@{
    ViewData["Title"] = "Thanh toán";
    decimal total = Model.Sum(x => x.TotalPrice);

    // Định nghĩa tông màu
    string brandRed = "#d14d5a";
    string lightPink = "#f7e6e9";
}

<style>
    /* CSS TÙY CHỈNH */
    .text-custom-primary {
        color: @brandRed !important;
    }

    .bg-custom-light {
        background-color: @lightPink !important;
    }

    /* Nút Hoàn tất */
    .btn-checkout-complete {
        background-color: @brandRed !important;
        border-color: @brandRed !important;
        color: white;
        font-size: 1.1rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-checkout-complete:hover {
            background-color: #b03d47 !important;
            border-color: #b03d47 !important;
            box-shadow: 0 4px 10px rgba(209, 77, 90, 0.4);
        }

    /* Card Payment Option */
    .payment-option {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
    }

        .payment-option:hover {
            background-color: #f9f9f9;
            border-color: @brandRed;
        }

        /* Khi radio được chọn */
        .payment-option.selected {
            border-color: @brandRed;
            background-color: @lightPink; /* Nền hồng nhạt khi chọn */
        }

    .form-check-input:checked {
        background-color: @brandRed;
        border-color: @brandRed;
    }

    /* Các style cũ */
    .card-header.bg-white {
        border-bottom: 1px solid #eee;
    }

    .card-header .fw-bold {
        color: @brandRed;
    }

    .card.bg-light {
        background-color: @lightPink !important;
        border: none;
    }

    .card-title.fw-bold {
        color: @brandRed;
    }

    .h4.text-danger {
        color: @brandRed !important;
    }

    .form-control {
        border-radius: 0.3rem;
    }
</style>

<div class="container py-5">
    <h2 class="mb-4 text-uppercase fw-bold text-center" style="color: @brandRed;">Xác nhận đơn hàng</h2>

    <div class="row">
        <div class="col-md-7 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-truck-fast me-2"></i>Thông tin giao hàng</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Checkout" method="post" id="checkoutForm">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và tên người nhận</label>
                            <input type="text" name="customerName" class="form-control" required placeholder="Nguyễn Văn A" value="@User.Identity.Name">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <input type="tel" name="phone" class="form-control" required placeholder="09xxx..." pattern="[0-9]{10}">
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Địa chỉ nhận hàng</label>
                            <textarea name="address" class="form-control" rows="2" required placeholder="Số nhà, đường, phường/xã, quận/huyện..."></textarea>
                        </div>

                        <hr class="my-4 text-muted">
                        <h5 class="mb-3 fw-bold text-custom-primary"><i class="fa-regular fa-credit-card me-2"></i>Phương thức thanh toán</h5>

                        <div class="form-check payment-option selected" onclick="selectPayment('cod')">
                            <input class="form-check-input me-3" type="radio" name="paymentMethod" id="paymentCOD" value="COD" checked>
                            <label class="form-check-label w-100" for="paymentCOD" style="cursor: pointer;">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="fw-bold"><i class="fa-solid fa-money-bill-wave text-success me-2"></i>Thanh toán khi nhận hàng (COD)</span>
                                </div>
                            </label>
                        </div>

                        <div class="form-check payment-option" onclick="selectPayment('vnpay')">
                            <input class="form-check-input me-3" type="radio" name="paymentMethod" id="paymentVNPay" value="VNPay">
                            <label class="form-check-label w-100" for="paymentVNPay" style="cursor: pointer;">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="fw-bold">Thanh toán Online qua VNPay</span>

                                    <img src="https://vnpay.vn/assets/images/logo-icon/logo-primary.svg" alt="VNPay" style="height: 25px;">
                                </div>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-checkout-complete w-100 py-3 mt-3 fw-bold text-uppercase shadow-sm">
                            Đặt hàng ngay
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card bg-custom-light border-0 sticky-top" style="top: 80px; z-index: 1;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3 border-bottom border-secondary pb-2">Đơn hàng của bạn</h5>
                    <ul class="list-group list-group-flush mb-3 rounded bg-transparent">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 border-bottom border-white">
                                <div class="d-flex align-items-center">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl" style="width:55px; height:55px; object-fit:cover" class="rounded border bg-white">
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">
                                            @item.Quantity
                                        </span>
                                    </div>
                                    <div class="ms-3">
                                        <div class="fw-bold text-truncate" style="max-width: 140px;">@item.ProductName</div>
                                        @if (!string.IsNullOrEmpty(item.VariantName))
                                        {
                                            <small class="text-muted d-block">@item.VariantName</small>
                                        }
                                    </div>
                                </div>
                                <span class="fw-bold text-dark">@item.TotalPrice.ToString("#,##0") đ</span>
                            </li>
                        }
                    </ul>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính:</span>
                        <span class="fw-bold">@total.ToString("#,##0") đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Phí vận chuyển:</span>
                        <span class="text-success fw-bold">Miễn phí</span>
                    </div>

                    <div class="d-flex justify-content-between border-top border-secondary pt-3 mt-2">
                        <span class="h5 fw-bold text-custom-primary">Tổng cộng:</span>
                        <strong class="h4 text-custom-primary">@total.ToString("#,##0") đ</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // 1. Script đổi màu nền khi chọn phương thức thanh toán
        function selectPayment(type) {
            document.querySelectorAll('.payment-option').forEach(el => el.classList.remove('selected'));

            if (type === 'cod') {
                document.getElementById('paymentCOD').checked = true;
                document.getElementById('paymentCOD').closest('.payment-option').classList.add('selected');
            } else {
                document.getElementById('paymentVNPay').checked = true;
                document.getElementById('paymentVNPay').closest('.payment-option').classList.add('selected');
            }
        }

        // 2. Script XÁC NHẬN ĐẶT HÀNG
        document.getElementById('checkoutForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Ngăn form gửi đi ngay lập tức

            // Lấy phương thức thanh toán đang chọn
            var paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            var confirmText = paymentMethod === 'VNPay' 
                ? "Bạn sẽ được chuyển đến trang thanh toán VNPay." 
                : "Đơn hàng sẽ được xác nhận và giao đến bạn.";

            // Hiện hộp thoại xác nhận (Dùng SweetAlert2 cho đẹp)
            Swal.fire({
                title: 'Xác nhận đặt hàng?',
                text: confirmText,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#d14d5a', // Màu đỏ thương hiệu
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đồng ý đặt hàng',
                cancelButtonText: 'Kiểm tra lại'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Nếu người dùng bấm Đồng ý -> Gửi form thật
                    this.submit(); 
                }
            });
        });
    </script>
}
