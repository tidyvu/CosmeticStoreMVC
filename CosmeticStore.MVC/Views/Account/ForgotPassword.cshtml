@{
    ViewData["Title"] = "Khôi phục mật khẩu";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100 bg-light">

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="max-width: 450px; width: 100%;">
        <div class="card-body p-5">

            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-warning bg-opacity-10 text-warning rounded-circle mb-3" style="width: 70px; height: 70px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-question-circle-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z" />
                    </svg>
                </div>
                <h3 class="fw-bold text-dark">Quên mật khẩu?</h3>
                <p class="text-muted small mb-0">
                    Đừng lo lắng! Hãy nhập email đăng ký của bạn,<br>chúng tôi sẽ gửi mã đặt lại mật khẩu ngay.
                </p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger d-flex align-items-center p-2 mb-3 small" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>@ViewBag.Error</div>
                </div>
            }

            <form asp-action="ForgotPassword" method="post">

                <div class="mb-4">
                    <label class="form-label fw-bold small text-secondary">Email đăng ký</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input type="email"
                               name="email"
                               class="form-control border-start-0 ps-0"
                               placeholder="name@example.com"
                               required
                               autofocus />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fs-6 fw-bold rounded-3 shadow-sm transition-btn">
                    GỬI MÃ XÁC NHẬN
                </button>
            </form>

            <div class="text-center mt-4 border-top pt-3">
                <a asp-action="Login" class="text-decoration-none small text-muted hover-link d-flex align-items-center justify-content-center">
                    <i class="bi bi-arrow-left me-1"></i> Quay về Đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f2f5;
    }

    /* Hiệu ứng focus cho input group */
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15); /* Màu bóng xanh primary */
        border-radius: 0.375rem;
    }

        .input-group:focus-within .form-control,
        .input-group:focus-within .input-group-text {
            border-color: #0d6efd;
        }

    .transition-btn {
        transition: transform 0.2s;
    }

        .transition-btn:hover {
            transform: translateY(-2px);
        }

    .hover-link:hover {
        color: #0d6efd !important;
        text-decoration: underline !important;
    }
</style>