@model CosmeticStore.MVC.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Thông tin danh mục</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-3">
                <dt class="col-sm-4 fw-bold">Tên danh mục:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

                <dt class="col-sm-4 fw-bold">Danh mục cha:</dt>
                <dd class="col-sm-8">
                    @if (Model.ParentCategory != null)
                    {
                        @Model.ParentCategory.CategoryName
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
