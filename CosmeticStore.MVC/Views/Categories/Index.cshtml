@model IEnumerable<CosmeticStore.MVC.Models.Category>

@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-uppercase">
            <i class="fa-solid fa-layer-group text-primary"></i> Quản lý danh mục
        </h2>
        <a class="btn btn-success fw-bold" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Thêm danh mục
        </a>
    </div>

    <!-- Card chứa bảng -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Danh mục cha</th>
                        <th class="text-center" style="width: 180px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>

                            <td>
                                @if (item.ParentCategory != null)
                                {
                                    <span class="badge bg-primary">@item.ParentCategory.CategoryName</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không có</span>
                                }
                            </td>

                            <td class="text-center">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.CategoryId">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center my-3">
                    <i class="fa-solid fa-triangle-exclamation"></i> Chưa có danh mục nào!
                </div>
            }
        </div>
    </div>
</div>
