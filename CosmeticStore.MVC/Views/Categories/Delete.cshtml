@model CosmeticStore.MVC.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xác nhận xóa danh mục</h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning text-center">
                ⚠️ <strong>Bạn có chắc chắn muốn xóa danh mục này?</strong>
                <br />Hành động này không thể hoàn tác!
            </div>

            <dl class="row mb-3">
                <dt class="col-sm-4 fw-bold">Tên danh mục:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

                <dt class="col-sm-4 fw-bold">Danh mục cha:</dt>
                <dd class="col-sm-8">
                    @if (Model.ParentCategory != null)
                    {
                        @Model.ParentCategory.CategoryName
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CategoryId" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>
