@model CosmeticStore.MVC.Models.User
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container py-5" style="max-width: 500px;">
    <h2 class="text-center fw-bold mb-4">ĐĂNG KÝ TÀI KHOẢN</h2>
    <form asp-action="Register" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input asp-for="FullName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <button type="submit" class="btn btn-dark w-100">ĐĂNG KÝ</button>
        <div class="mt-3 text-center">
            Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a>
        </div>
    </form>
</div>