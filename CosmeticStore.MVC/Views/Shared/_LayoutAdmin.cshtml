<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Sudes Beauty</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* CSS Riêng cho Admin */
        :root {
            --sidebar-width: 280px;
            --accent-color: #d9534f; /* Màu Đỏ Đậm */
            --sidebar-bg: #212529; /* Màu tối hơn */
            --header-height: 70px;
        }

        body {
            background-color: #f4f6f9; /* Màu nền nhẹ hơn */
        }

        /* Sidebar cố định và chuyển động mượt */
        .sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background-color: var(--sidebar-bg);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1030;
            transition: transform 0.3s ease-in-out;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        /* Ẩn Sidebar khi ở chế độ mobile */
        @@media (max-width: 991.98px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .content-wrapper {
                margin-left: 0 !important;
            }
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #343a40;
            color: white;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 15px 20px;
            transition: all 0.2s;
        }

            .sidebar a:hover, .sidebar a.active {
                background-color: #343a40; /* Nền tối hơn khi hover */
                color: white;
                border-left: 5px solid var(--accent-color); /* Màu nhấn mạnh */
                padding-left: 15px; /* Giảm padding để làm nổi bật border-left */
            }

            .sidebar a.active {
                font-weight: bold;
            }

        .sidebar i {
            width: 25px;
            text-align: center;
            margin-right: 15px;
            font-size: 1.1rem;
        }

        /* Vùng chứa nội dung chính */
        .content-wrapper {
            margin-left: var(--sidebar-width);
            transition: margin-left 0.3s ease-in-out;
            padding-top: var(--header-height); /* Bù cho header cố định */
        }

        /* Header cố định */
        .admin-header {
            position: fixed;
            top: 0;
            left: var(--sidebar-width);
            right: 0;
            height: var(--header-height);
            background: white;
            padding: 0 30px;
            box-shadow: 0 1px 4px rgba(0,0,0,0.05);
            z-index: 1020;
            transition: left 0.3s ease-in-out;
        }

        /* Nút toggle cho mobile */
        .navbar-toggler {
            display: none;
        }

        @@media (max-width: 991.98px) {
            .navbar-toggler {
                display: block;
                position: fixed;
                top: 15px;
                left: 15px;
                z-index: 1040;
            }

            .admin-header {
                left: 0;
                padding-left: 60px; /* Chừa chỗ cho nút toggle */
            }
        }
    </style>
</head>
<body>

    <button class="navbar-toggler btn btn-outline-dark" type="button" id="sidebarToggle">
        <span class="fa fa-bars"></span>
    </button>

    <div class="sidebar d-flex flex-column flex-shrink-0 p-0" id="adminSidebar">
        <div class="sidebar-header text-center fw-bolder fs-4">
            <i class="fa fa-shield-halved text-danger"></i> ADMIN PANEL
        </div>

        <nav class="nav flex-column flex-grow-1">
            @{
                string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            }
            <a asp-controller="Admin" asp-action="Index" class="@(currentController == "Admin" ? "active" : "")">
                <i class="fa fa-gauge"></i> Dashboard
            </a>
            <a asp-controller="AdminOrders" asp-action="Index" class="@(currentController == "AdminOrders" ? "active" : "")">
                <i class="fa fa-cart-flatbed"></i> Quản lý Đơn hàng
            </a>

            <a asp-controller="AdminUsers" asp-action="Index" class="@(currentController == "AdminUsers" ? "active" : "")">
                <i class="fa fa-users"></i> Quản lý Tài khoản
            </a>

            <a asp-controller="AdminReports" asp-action="Index" class="@(currentController == "AdminReports" ? "active" : "")">
                <i class="fa fa-chart-line"></i> Quản lý Doanh thu
            </a>

            <a asp-controller="Products" asp-action="Index" class="@(currentController == "Products" ? "active" : "")">
                <i class="fa fa-box-open"></i> Quản lý Sản phẩm
            </a>
            <a asp-controller="Categories" asp-action="Index" class="@(currentController == "Categories" ? "active" : "")">
                <i class="fa fa-list"></i> Quản lý Danh mục
            </a>
            <a asp-controller="Brands" asp-action="Index" class="@(currentController == "Brands" ? "active" : "")">
                <i class="fa fa-copyright"></i> Quản lý Thương hiệu
            </a>
        </nav>

        <div class="p-3 border-top border-secondary">
            <a href="/" class="btn btn-outline-light w-100 mb-2 rounded-pill"><i class="fa fa-home"></i> Về trang chủ</a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger w-100 rounded-pill"><i class="fa fa-sign-out"></i> Đăng xuất</a>
        </div>
    </div>

    <div class="content-wrapper">
        <div class="admin-header d-flex justify-content-between align-items-center">
            <h4 class="m-0 text-uppercase fw-light text-secondary">@ViewData["Title"]</h4>
            <div class="d-flex align-items-center">
                <span class="text-muted me-2">Xin chào,</span>
                <strong class="text-dark">@User.Identity?.Name</strong>
                <i class="fa fa-user-circle fa-lg ms-2 text-primary"></i>
            </div>
        </div>

        <div class="container-fluid px-4 py-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcO4yG7pX57bA" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                // Toggle class active để hiện/ẩn sidebar trên mobile
                $('#adminSidebar').toggleClass('active');
            });

            // Tự động đóng sidebar khi click vào nội dung trên mobile
            $('.content-wrapper').on('click', function() {
                if ($('#adminSidebar').hasClass('active') && $(window).width() < 992) {
                    $('#adminSidebar').removeClass('active');
                }
            });

            // Xử lý Summernote (nếu có các textarea cần editor)
            // $('.summernote').summernote({
            //      height: 300,
            //      tabsize: 2
            // });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>